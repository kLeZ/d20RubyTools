<% content_for :title do %> - RPG Templates<% end %>
<% content_for :head do %>
	<%= stylesheet_link_tag "tablecloth", "prettify" %>
	<%= javascript_include_tag "jquery.metadata", "jquery.tablesorter", "jquery.tablecloth" %>
<% end %>

<h1>Here are listed all the rpg templates available on d20WebTools!</h1>
<p>They are not based only on the d20 system, despite our name ;-)</p>

<script type="text/javascript">
	$("table").tablecloth();
</script>
<%= link_to 'New', new_rpg_template_path, :class => 'btn btn-success' %>
<h4>Available templates</h4>
<table class="table table-striped table-condensed">
	<% @rpg_templates.each do |t| %>
	<tr>
		<td><strong style="font-size: large;"><%= t.name %></strong></td>
		<td style="text-align: right;">
			<%= link_to 'View', rpg_template_path(t), :class => 'btn btn-success' %>
			<%= link_to 'Edit', edit_rpg_template_path(t), :class => 'btn btn-warning' %>
			<%= link_to 'Destroy', rpg_template_path(t), method: :delete,
						 data: { confirm: 'Are you sure?' },
						:class => 'btn btn-danger' %>
		</td>
	</tr>
	<% end %>
</table>
